{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["react", "react-hooks", "jsx-a11y", "@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "prettier"
  ],
  "globals": {
    "JSX": "readonly" // Make JSX namespace accessible
  },
  "overrides": [],
  "rules": {
    "@typescript-eslint/lines-between-class-members": 1,
    "@typescript-eslint/no-dupe-class-members": 2,
    "@typescript-eslint/no-redeclare": 2,
    "@typescript-eslint/no-shadow": 2,
    "lines-between-class-members": 0, // Avoids incorrect error reports on class method overloads
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "no-dupe-class-members": 0, // Avoids incorrect error reports on class method overloads
    "no-redeclare": 0, // Avoids incorrect error reports on function overloads
    "no-shadow": 0, // Avoids incorrect error reports on Enum type
    "no-unused-vars": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-props-no-spreading": 0, // Disable it for MUI components customization
    "react/require-default-props": 0,
    "react/react-in-jsx-scope": 0,
    "react-hooks/exhaustive-deps": 1, // Reminds missing dependencies
    "react-hooks/rules-of-hooks": 2
  }
}
